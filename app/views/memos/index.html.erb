<p id="notice"><%= notice %></p>

<h1>Moneyger</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>銀行（円）</th>
      <th>財布（円）</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.title %></td>
        <td><%= memo.bank %></td>
        <td><%= memo.wallet %></td>
        <td><%= link_to '詳細', memo %></td>
        <td><%= link_to '編集', edit_memo_path(memo) %></td>
        <td><%= link_to '削除', memo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

